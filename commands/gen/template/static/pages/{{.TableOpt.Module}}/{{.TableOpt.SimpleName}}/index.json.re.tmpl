{{ $colLen := (len .Table.Columns) }}
{{ $pk := .Table.PrimaryKey }}
{{ $adminPathPrefix := print "admin/" .TableOpt.Module "/" .TableOpt.SimpleName}}
{
  "type": "page",
  "name": "{{.TableOpt.Module}}-{{.TableOpt.SimpleName}}",
  "body": [
    {
      "type": "crud",
      "name": "{{.Table.Name}}",
      "api": {
        "method": "post",
        "url": "${API_BASEURL}/{{$adminPathPrefix}}/query",
        "data": {
          "order_fields": [
            {
              "field": "${orderBy}",
              "order_type": "${orderDir}"
            }
          ],
          "conditions": [
            {
              "disable": "${!{{$pk.Name}}}",
              "op": "and",
              "field": "{{$pk.Name}}",
              "condition_type": "eq",
              "vals": [
                "{{$pk.Name}}"
              ]
            },
            {
              "disable": "${!status || status == ''}",
              "op": "and",
              "field": "status",
              "condition_type": "eq",
              "vals": [
                "${status}"
              ]
            }
          ],
          "page": {
            "offset": "${(page - 1) * perPage}",
            "limit": "${perPage}",
            "query_count": true
          }
        }
      },
      "filter": {
        "title": "搜索",
        "body": [
          {
            "type": "group",
            "body": [
              {
                "label": "ID",
                "type": "input-text",
                "size": "sm",
                "name": "id",
                "clearable": true,
                "placeholder": "ID搜索"
              },
              {
                "label": "状态",
                "type": "select",
                "size": "sm",
                "name": "status",
                "source": "${options['{{.Table.Name}}.status']}"
              }
            ]
          }
        ],
        "actions": [
          {
            "type": "button",
            "actionType": "dialog",
            "icon": "fa fa-plus",
            "label": "新增",
            "dialog": {
              "title": "新增数据",
              "body": {
                "type": "form",
                "name": "add-form",
                "api": "POST:${API_BASEURL}/{{$adminPathPrefix}}/add",
                "body": [
                  {{range $i, $e := .Table.Columns}}{{if not (eq $e.Name $pk.Name) }}
                  {
                    "label": "{{LineString $e.Comment}}",
                    "type": "input-text",
                    "name": "{{$e.Name}}"
                  }{{if lt (Add $i 1) $colLen}},{{end}}{{end}}
                  {{end}}
                ]
              }
            }
          },
          {
            "type": "reset",
            "label": "重置"
          },
          {
            "type": "submit",
            "level": "primary",
            "label": "查询"
          }
        ]
      },
      "bulkActions": [
        {
          "label": "批量删除",
          "type": "button",
          "level": "danger",
          "actionType": "ajax",
          "api": {
            "method": "DELETE",
            "url": "${API_BASEURL}/{{$adminPathPrefix}}/del",
            "data": {
              "ids": "${ids}"
            }
          },
          "confirmText": "确定要批量删除?"
        }
      ],
      "quickSaveApi": {
        "method": "PATCH",
        "url": "${API_BASEURL}/{{$adminPathPrefix}}/batch-update",
        "data": {
          "rows": "${rowsDiff}"
        }
      },
      "footerToolbar": [
        "statistics",
        "switch-per-page",
        "pagination"
      ],
      "columns": [
        {{range $i, $e := .Table.Columns}}
        {
          "label": "{{LineString $e.Comment}}",
          "name": "{{$e.Name}}"
        },
        {{end}}
        {
          "type": "operation",
          "label": "操作",
          "buttons": [
            {
              "type": "button",
              "icon": "fa fa-eye",
              "actionType": "dialog",
              "tooltip": "查看",
              "dialog": {
                "title": "查看信息",
                "body": {
                  "type": "form",
                  "body": [
                    {{range $i, $e := .Table.Columns}}
                    {
                      "label": "{{LineString $e.Comment}}",
                      "type": "static",
                      "name": "{{$e.Name}}"
                    }{{if lt (Add $i 1) $colLen}},{{end}}
                    {{end}}
                  ]
                }
              }
            },
            {
              "type": "button",
              "icon": "fa fa-pencil",
              "tooltip": "编辑",
              "actionType": "drawer",
              "drawer": {
                "title": "修改记录",
                "body": {
                  "type": "form",
                  "api": {
                    "method": "PUT",
                    "url": "${API_BASEURL}/{{$adminPathPrefix}}/update",
                    "data": {
                      {{range $i, $e := .Table.Columns}}  "{{$e.Name}}": "{{printf "${%s}" $e.Name}}"{{if lt (Add $i 1) $colLen}},{{end}}
                      {{end}}
                    },
                    "messages": {
                      "success": "修改成功"
                    }
                  },
                  "body": [
                    {{range $i, $e := .Table.Columns}}{{if not (eq $e.Name $pk.Name) }}
                    {
                      "label": "{{LineString $e.Comment}}",
                      "type": "input-text",
                      "name": "{{$e.Name}}"
                    }{{if lt (Add $i 1) $colLen}},{{end}}{{end}}
                    {{end}}
                  ]
                }
              }
            },
            {
              "type": "button",
              "icon": "fa fa-times text-danger",
              "actionType": "ajax",
              "tooltip": "删除",
              "confirmText": "您确认要删除[{{printf "${%s}" $pk.Name}}]?",
              "api": {
                "method": "post",
                "url": "${API_BASEURL}/{{$adminPathPrefix}}/del",
                "data": {
                  "ids": "${id}"
                }
              }
            }
          ],
          "toggled": true
        }
      ],
      "affixHeader": true,
      "columnsTogglable": "auto",
      "placeholder": "暂无数据",
      "combineNum": 0,
      "bodyClassName": "panel-default"
    }
  ]
}
