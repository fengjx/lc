


{
  "type": "page",
  "name": "sys-",
  "body": [
    {
      "type": "crud",
      "name": "sys_dict",
      "api": {
        "method": "post",
        "url": "${API_BASEURL}/admin/sys//query",
        "data": {
          "order_fields": [
            {
              "field": "${orderBy}",
              "order_type": "${orderDir}"
            }
          ],
          "conditions": [
            {
              "disable": "${!id}",
              "op": "and",
              "field": "id",
              "condition_type": "eq",
              "vals": [
                "id"
              ]
            },
            {
              "disable": "${!status || status == ''}",
              "op": "and",
              "field": "status",
              "condition_type": "eq",
              "vals": [
                "${status}"
              ]
            }
          ],
          "page": {
            "offset": "${(page - 1) * perPage}",
            "limit": "${perPage}",
            "query_count": true
          }
        }
      },
      "filter": {
        "title": "搜索",
        "body": [
          {
            "type": "group",
            "body": [
              {
                "label": "ID",
                "type": "input-text",
                "size": "sm",
                "name": "id",
                "clearable": true,
                "placeholder": "ID搜索"
              },
              {
                "label": "状态",
                "type": "select",
                "size": "sm",
                "name": "status",
                "source": "${options['sys_dict.status']}"
              }
            ]
          }
        ],
        "actions": [
          {
            "type": "button",
            "actionType": "dialog",
            "icon": "fa fa-plus",
            "label": "新增",
            "dialog": {
              "title": "新增数据",
              "body": {
                "type": "form",
                "name": "add-form",
                "api": "POST:${API_BASEURL}/admin/sys//add",
                "body": [
                  
                  
                  {
                    "label": "分组",
                    "type": "input-text",
                    "name": "group"
                  },
                  
                  {
                    "label": "分组名称",
                    "type": "input-text",
                    "name": "group_name"
                  },
                  
                  {
                    "label": "数据值",
                    "type": "input-text",
                    "name": "value"
                  },
                  
                  {
                    "label": "显示标签",
                    "type": "input-text",
                    "name": "label"
                  },
                  
                  {
                    "label": "数据状态",
                    "type": "input-text",
                    "name": "status"
                  },
                  
                  {
                    "label": "备注",
                    "type": "input-text",
                    "name": "remark"
                  },
                  
                  {
                    "label": "更新时间",
                    "type": "input-text",
                    "name": "utime"
                  },
                  
                  {
                    "label": "创建时间",
                    "type": "input-text",
                    "name": "ctime"
                  }
                  
                ]
              }
            }
          },
          {
            "type": "reset",
            "label": "重置"
          },
          {
            "type": "submit",
            "level": "primary",
            "label": "查询"
          }
        ]
      },
      "bulkActions": [
        {
          "label": "批量删除",
          "type": "button",
          "level": "danger",
          "actionType": "ajax",
          "api": {
            "method": "DELETE",
            "url": "${API_BASEURL}/admin/sys//del",
            "data": {
              "ids": "${ids}"
            }
          },
          "confirmText": "确定要批量删除?"
        }
      ],
      "quickSaveApi": {
        "method": "PATCH",
        "url": "${API_BASEURL}/admin/sys//batch-update",
        "data": {
          "rows": "${rowsDiff}"
        }
      },
      "footerToolbar": [
        "statistics",
        "switch-per-page",
        "pagination"
      ],
      "columns": [
        
        {
          "label": "-",
          "name": "id"
        },
        
        {
          "label": "分组",
          "name": "group"
        },
        
        {
          "label": "分组名称",
          "name": "group_name"
        },
        
        {
          "label": "数据值",
          "name": "value"
        },
        
        {
          "label": "显示标签",
          "name": "label"
        },
        
        {
          "label": "数据状态",
          "name": "status"
        },
        
        {
          "label": "备注",
          "name": "remark"
        },
        
        {
          "label": "更新时间",
          "name": "utime"
        },
        
        {
          "label": "创建时间",
          "name": "ctime"
        },
        
        {
          "type": "operation",
          "label": "操作",
          "buttons": [
            {
              "type": "button",
              "icon": "fa fa-eye",
              "actionType": "dialog",
              "tooltip": "查看",
              "dialog": {
                "title": "查看信息",
                "body": {
                  "type": "form",
                  "body": [
                    
                    {
                      "label": "-",
                      "type": "static",
                      "name": "id"
                    },
                    
                    {
                      "label": "分组",
                      "type": "static",
                      "name": "group"
                    },
                    
                    {
                      "label": "分组名称",
                      "type": "static",
                      "name": "group_name"
                    },
                    
                    {
                      "label": "数据值",
                      "type": "static",
                      "name": "value"
                    },
                    
                    {
                      "label": "显示标签",
                      "type": "static",
                      "name": "label"
                    },
                    
                    {
                      "label": "数据状态",
                      "type": "static",
                      "name": "status"
                    },
                    
                    {
                      "label": "备注",
                      "type": "static",
                      "name": "remark"
                    },
                    
                    {
                      "label": "更新时间",
                      "type": "static",
                      "name": "utime"
                    },
                    
                    {
                      "label": "创建时间",
                      "type": "static",
                      "name": "ctime"
                    }
                    
                  ]
                }
              }
            },
            {
              "type": "button",
              "icon": "fa fa-pencil",
              "tooltip": "编辑",
              "actionType": "drawer",
              "drawer": {
                "title": "修改记录",
                "body": {
                  "type": "form",
                  "api": {
                    "method": "PUT",
                    "url": "${API_BASEURL}/admin/sys//update",
                    "data": {
                        "id": "${id}",
                        "group": "${group}",
                        "group_name": "${group_name}",
                        "value": "${value}",
                        "label": "${label}",
                        "status": "${status}",
                        "remark": "${remark}",
                        "utime": "${utime}",
                        "ctime": "${ctime}"
                      
                    },
                    "messages": {
                      "success": "修改成功"
                    }
                  },
                  "body": [
                    
                    
                    {
                      "label": "分组",
                      "type": "input-text",
                      "name": "group"
                    },
                    
                    {
                      "label": "分组名称",
                      "type": "input-text",
                      "name": "group_name"
                    },
                    
                    {
                      "label": "数据值",
                      "type": "input-text",
                      "name": "value"
                    },
                    
                    {
                      "label": "显示标签",
                      "type": "input-text",
                      "name": "label"
                    },
                    
                    {
                      "label": "数据状态",
                      "type": "input-text",
                      "name": "status"
                    },
                    
                    {
                      "label": "备注",
                      "type": "input-text",
                      "name": "remark"
                    },
                    
                    {
                      "label": "更新时间",
                      "type": "input-text",
                      "name": "utime"
                    },
                    
                    {
                      "label": "创建时间",
                      "type": "input-text",
                      "name": "ctime"
                    }
                    
                  ]
                }
              }
            },
            {
              "type": "button",
              "icon": "fa fa-times text-danger",
              "actionType": "ajax",
              "tooltip": "删除",
              "confirmText": "您确认要删除[${id}]?",
              "api": {
                "method": "post",
                "url": "${API_BASEURL}/admin/sys//del",
                "data": {
                  "ids": "${id}"
                }
              }
            }
          ],
          "toggled": true
        }
      ],
      "affixHeader": true,
      "columnsTogglable": "auto",
      "placeholder": "暂无数据",
      "combineNum": 0,
      "bodyClassName": "panel-default"
    }
  ]
}
